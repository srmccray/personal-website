---
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout title="Page Not Found - Stephen McCray">
  <section class="py-16 sm:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-6xl font-bold text-gray-900">404</h1>
      <p class="mt-4 text-xl text-gray-600">Page not found</p>
      <p class="mt-2 text-gray-500">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="mt-8 inline-flex items-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary/90 transition-colors"
      >
        Go Home
      </a>
    </div>
  </section>
</PageLayout>
