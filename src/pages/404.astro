---
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout title="Page Not Found - Stephen McCray">
  <section class="pt-24 pb-16 sm:pt-32 sm:pb-24">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h1 class="text-8xl font-bold text-gradient">404</h1>
      <p class="mt-6 text-2xl text-white">Page not found</p>
      <p class="mt-2 text-text-secondary">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="mt-8 inline-flex items-center px-6 py-3 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-500 transition-colors"
      >
        Go Home
      </a>
    </div>
  </section>
</PageLayout>
