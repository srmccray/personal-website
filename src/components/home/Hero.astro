---
interface Props {
  name: string;
  tagline: string;
}

const { name, tagline } = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src="/images/louvre-hero.jpg"
      alt=""
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Purple gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-purple-900/70 via-surface/80 to-surface"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-5xl mx-auto px-6 text-center pt-16">
    <h1 class="text-6xl sm:text-7xl lg:text-8xl font-bold tracking-tight">
      <span class="text-gradient">{name}</span>
    </h1>
    <p class="mt-8 text-sm sm:text-base text-gray-300 uppercase tracking-widest">
      {tagline}
    </p>
    <div class="mt-10 flex flex-wrap justify-center gap-4">
      <a
        href="/projects"
        class="inline-flex items-center px-8 py-4 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-500 transition-colors shadow-lg shadow-purple-500/25"
      >
        View Projects
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      <a
        href="/about"
        class="inline-flex items-center px-8 py-4 border border-white/20 text-white font-medium rounded-lg hover:bg-white/10 transition-colors backdrop-blur-sm"
      >
        About Me
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
